{
  "info": {
    "title": "TOme",
    "version": "1.0.0",
    "baseUri": "http://holy.arch.com/holy-entities/",
    "description": "An Tome entity storing a tome properties and a list of pericopes."
  },
  "definitions": {
    "Tome": {
      "description": "The Tome entity root.",
      "namespace": "http://holy.arch.com/data/tome",
      "namespacePrefix": "t",
      "primaryKey": "siglum",
      "required": ["name", "testament", "pericopes"],
      "rangeIndex": ["siglum"],
      "elementRangeIndex": [],
      "pathRangeIndex": [],
      "wordLexicon": [],
      "pii": [],
      "properties": {
        "siglum": {
          "datatype": "string",
          "collation": "http://marklogic.com/collation/",
          "description": "The tome siglum, e.g. <<Mt>>."
        },
        "name": {
          "datatype": "string",
          "collation": "http://marklogic.com/collation/",
          "description": "The tome name, e.g. <<Ewangelia wg Å›w. Mateusza>>."
        },
        "testament": {
          "datatype": "string",
          "collation": "http://marklogic.com/collation/",
          "description": "The testament reference. It can be an <<Old Testament>> or a <<New Testament>>."
        },
        "first-chapter": {
          "datatype": "string",
          "collation": "http://marklogic.com/collation/",
          "description": "The first chapter number."
        },
        "last-chapter": {
          "datatype": "string",
          "collation": "http://marklogic.com/collation/",
          "description": "The last chapter number."
        },
        "pericopes": {
          "datatype": "array",
          "description": "The list of pericopes being a contained by a specific tome.",
          "items": {
            "$ref": "#/definitions/Pericope"
          }
        }
      }
    },
    "Pericope": {
      "description": "The Pericope entity (child of Tome entity).",
      "namespace": "http://holy.arch.com/data/pericope",
      "namespacePrefix": "p",
      "primaryKey": "id",
      "required": [],
      "rangeIndex": [],
      "elementRangeIndex": ["id"],
      "pathRangeIndex": [],
      "wordLexicon": [],
      "pii": [],
      "properties": {
        "id": {
          "datatype": "string",
          "collation": "http://marklogic.com/collation/",
          "description": "The unique verse identifier being md5 created from a concatenation of a testament reference, a tome reference, a chapter number and a verse number values."
        },
        "title": {
          "datatype": "string",
          "collation": "http://marklogic.com/collation/",
          "description": "The verse cardinal number in context of a chapter."
        },
        "tome": {
          "$ref": "#/definitions/Tome",
          "description": "The chapter reference."
        },
        "verses": {
          "datatype": "array",
          "description": "The list of verses being a content of a specific chapter.",
          "items": {
            "$ref": "http://holy.arch.com/holy-entities/Verse"
          }
        },
        "origin-references": {
          "datatype": "array",
          "description": "The list of supplement identifiers connected with a specific verse",
          "items": {
            "datatype": "string",
            "collation": "http://marklogic.com/collation/",
            "description": "The verse content."
          }
        }
      }
    }
  }
}
